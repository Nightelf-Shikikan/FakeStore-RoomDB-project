<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image (fills entire screen) -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Background"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper_7" />

    <!-- Foreground content (stacked on top) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/CatalogLoadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Catalog" />

            <Button
                android:id="@+id/basketLoadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Basket"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Fragments split vertically -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/basketFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>